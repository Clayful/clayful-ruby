module Clayful

	class {{className}}

		@@name = '{{className}}'
		@@path = '{{{pathName}}}'

		def self.name
			@@name
		end

		def self.path
			@@path
		end

	{{#apis}}
		def self.{{method}}(*args)

			Clayful.call_api({
				'model_name'       => @@name,
				'method_name'      => '{{method}}',
				'http_method'      => '{{httpMethod}}',
				'path'             => '{{{path}}}',
				'params'           => [{{#arguments}}'{{{.}}}', {{/arguments}}],
				{{#usesFormData}}'uses_form_data'   => true,
				{{/usesFormData}}{{#withoutPayload}}'without_payload'  => true,
				{{/withoutPayload}}'args'             => args
			})

		end

	{{/apis}}
	end

end